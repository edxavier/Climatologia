                android:src="@drawable/thermometer_24"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:inputType="numberDecimal"
                android:ems="10"
                android:hint="@string/celcius"
